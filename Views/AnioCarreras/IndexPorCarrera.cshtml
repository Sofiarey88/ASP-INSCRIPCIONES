@model IEnumerable<Inscripciones.Models.AnioCarrera>

@{
    ViewData["Title"] = "Index";
    int idcarrera = ViewBag.IdCarrera;

}

<h1>MOSTRANDO CARRERAS SELECCIONADAS POR AÑO</h1>

<p>
    <a asp-action="CreateConCarrera" asp-route-idcarrera="">Create New</a>
</p>

<form asp-controller="AnioCarreras" asp-action="IndexPorCarrera" method="post">
    <div class="form-group">
        <label asp-for="@idcarrera" class="control-label"></label>
        <select asp-for="@idcarrera" class="form-control" asp-items="ViewBag.Carreras" onchange="this.form.submit()"></select>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carrera.Nombre)
            </td>
                <td>
                    <a asp-controller="Materias" asp-action="IndexPorAnio" asp-route-idanio="@item.Id" class="btn materias">Materias</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn editar">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn detalles">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn eliminar">Eliminar</a>
                </td>
        </tr>
}
    </tbody>
</table>

<a asp-controller="Carreras" asp-action="Index">Volver</a>
