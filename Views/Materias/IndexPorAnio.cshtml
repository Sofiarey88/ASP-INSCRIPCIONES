@model IEnumerable<Inscripciones.Models.Materia>

@{
    ViewData["Title"] = "Index";
    int idanio = ViewBag.IdAnio;
    int idcarrera = ViewBag.IdCarrera;

}

<h1>MOSTRANDO MATERIAS DEL AÑO SELECCIONADO</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Materias" asp-action="IndexPorAnio" method="get">
    <div class="form-group">
        <label asp-for="@idanio" class="control-label"></label>
        <select asp-for="@idanio" class="form-control" asp-items=ViewBag.AniosCarreras onchange="this.form.submit()"></select>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnioCarrera)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnioCarrera.Nombre)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn editar">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn detalles">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn eliminar">Eliminar</a>
                </td>
        </tr>
}
    </tbody>
</table>

<a asp-controller="AnioCarreras" asp-action="IndexPorCarrera" asp-route-idcarrera="@idcarrera">Volver</a>
